<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.bignerdranch.android.memo.Memoes.MemoActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        android:baselineAligned="false">

    <Spinner
        android:id="@+id/memo_select_categori_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
    android:id="@+id/textView"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:padding="4dp"
    android:text="@string/memo_title"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    >


    <Button
        android:id="@+id/memo_settiong_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/mymemo_title_hint"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:hint="@string/write_title_hint"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="104dp"
            android:layout_weight="0.40" />

        <TextView
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:text="@string/memo_text"
        android:padding="4dp"
        tools:layout_editor_absoluteY="56dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/mymemo_text_hint"
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/write_text_hint"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="106dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <Button
                android:id="@+id/mymemo_nosave_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소" />


        <Button
            android:id="@+id/memo_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="삭제" />

        <Button
            android:id="@+id/mymemo_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="0.33"
            android:text="저장"/>

    </LinearLayout>
    </LinearLayout>
