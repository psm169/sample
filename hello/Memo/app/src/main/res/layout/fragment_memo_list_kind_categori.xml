<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_gravity="bottom">

    <RelativeLayout
        android:id="@+id/list_kind_categori_layout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <TextView
            android:id="@+id/list_kind_categori_info"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_kind_text"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/list_kind_date"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/list_kind_title"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/list_kind_title"
            android:layout_width="253dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/list_kind_date"/>


        <TextView
            android:id="@+id/list_kind_text"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_alignStart="@+id/list_kind_title"
            android:layout_below="@+id/list_kind_date"/>
    </RelativeLayout>

</RelativeLayout>
