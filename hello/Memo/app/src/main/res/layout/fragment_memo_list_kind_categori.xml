<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_kind_categori_info"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/list_kind_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/list_kind_date"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/list_kind_title" />
    <TextView
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:id="@+id/list_kind_title"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/list_kind_date"/>


    <TextView
        android:id="@+id/list_kind_text"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_below="@+id/list_kind_date"
        android:layout_alignStart="@+id/list_kind_title"/>

</RelativeLayout>
